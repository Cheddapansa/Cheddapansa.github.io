<FridgeScreen>:
    name: 'fridge'
    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.7
        Rectangle:
            pos: self.pos
            size: self.size
            source: "fridge.png"

    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(10)

        Label:
            text: 'Fridge'
            font_name: "Impact"
            font_size: dp(30)
            color: 1, 1, 1, 1
            size_hint_y: None
            height: dp(50)

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: dp(200)

            TextInput:
                id: item_name
                hint_text: 'Enter item name'
                size_hint_y: None
                height: dp(40)
                on_text:
                    item_status.text = self.text
                    root.recommendFields(self.text)

            Label:
                id: item_status
                text: ''
                font_size: dp(12)
                size_hint_y: None
                height: dp(20)
                color: 1, 0, 0, 1  # Red for visibility

            TextInput:
                id: item_amount
                hint_text: 'Enter amount (e.g., 2kg, 3L)'
                size_hint_y: None
                height: dp(40)

            TextInput:
                id: item_expiry
                hint_text: 'Enter expiry date (DD/MM/YY)'
                size_hint_y: None
                height: dp(40)

            TextInput:
                id: food_category
                hint_text: 'Enter food category (e.g., Dairy, Meat)'
                size_hint_y: None
                height: dp(40)

        Label:
            id: recommendation_label
            text: ''
            font_size: dp(14)
            color: 0, 0.5, 1, 1
            size_hint_y: None
            height: dp(20)

        BoxLayout:
            id: suggested_dates_container
            orientation: 'vertical'
            spacing: dp(5)
            size_hint_y: None
            height: self.minimum_height

        Label:
            id: success_message
            text: ''
            font_size: dp(18)
            color: 0, 1, 0, 1  # Green text for success message
            size_hint_y: None
            height: dp(30)
            size_hint_x: 1  # Makes sure the width takes the available space
            text_size: self.width, None  # Allows text wrapping
            halign: 'center'  # Centers the text horizontally

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: dp(250)
            spacing: dp(5)

            Button:
                text: 'Add to Fridge'
                font_name: "Impact"
                font_size: dp(25)
                size_hint: None, None
                size: dp(200), dp(50)
                pos_hint: {'center_x': 0.5}
                background_color: (0, 0.8, 0.4, 1)
                background_normal: ''
                on_press: root.addItem()

            Button:
                text: 'Clear Fields'
                font_name: "Impact"
                font_size: dp(25)
                size_hint: None, None
                size: dp(200), dp(50)
                pos_hint: {'center_x': 0.5}
                background_color: (0.3, 0.6, 0.9, 1)
                background_normal: ''
                on_press: root.clearFields()

